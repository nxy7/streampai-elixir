# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@timescaledb:5432/postgres?sslmode=disable
ECTO_IPV6=false
POOL_SIZE=25

# Phoenix/App Configuration
PHX_SERVER=true
PHX_HOST=yourdomain.com
PORT=4000
MIX_ENV=prod

# Security - Generate with: mix phx.gen.secret
# Used for both Phoenix sessions/cookies AND JWT token signing
SECRET_KEY=your_64_character_secret_key_here

# OAuth - Google (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/user/google/callback

# OAuth - Twitch (Get from Twitch Developer Console)
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=https://yourdomain.com/streaming/connect/twitch/callback

# Cloudflare (Optional - if using Cloudflare)
CLOUDFLARE_API_KEY=your_cloudflare_api_key
CLOUDFLARE_AUTH_EMAIL=your@email.com
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Additional Configuration
DNS_CLUSTER_QUERY=your_dns_cluster_query