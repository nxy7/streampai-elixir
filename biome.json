{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["frontend/**", "cdk/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["frontend/**/*.stories.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"noSvgWithoutTitle": "off"
					},
					"suspicious": {
						"noShadowRestrictedNames": "off"
					}
				}
			}
		},
		{
			"includes": ["frontend/src/sdk/**"],
			"linter": {
				"enabled": false
			}
		},
		{
			"includes": ["cdk/**"],
			"linter": {
				"rules": {
					"nursery": {
						"useSortedClasses": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "all",
			"quoteStyle": "double",
			"bracketSameLine": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
