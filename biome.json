{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "all",
			"quoteStyle": "double",
			"bracketSameLine": true,
			"semicolons": "always"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": {
					"level": "on",
					"options": {
						"identifierOrder": "lexicographic"
					}
				},
				"useSortedAttributes": "on",
				"useSortedProperties": "on"
			}
		}
	}
}
